%section
  .container
    .columns
      .column.is-8
        %h1 My profile
        %h2 Modify your account details
        = render "shared/notifications"
        = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, wrapper: :horizontal) do |f|
          = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?
          = f.input :name
          = f.input :email
          = f.input :password
          = f.input :password_confirmation
          .field.is-horizontal
            .field-label
            .field-body
              .field.is-grouped
                = f.submit "Save", class: "control button is-dark"
                = link_to "Cancel", root_path, class: "control button is-light"
          %hr
          = link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete
