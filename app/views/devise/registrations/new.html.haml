%section
  .container
    .columns
      .column.is-offset-2.is-8
        = render "shared/notifications"
        %h1 Sign up
        %h2 You are one step away from improving your memory
        = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?
          = f.input :name
          = f.input :email
          = f.input :password
          = f.input :password_confirmation
          .field.is-horizontal
            .field.is-grouped
              = f.submit "Sign up", class: "control button is-dark"
              = link_to "Cancel", root_path, class: "control button is-light"
