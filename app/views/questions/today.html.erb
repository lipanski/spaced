<section class="md:w-4/6 md:pt-24">
  <%= render "shared/notifications" %>
  <% if @question.present? %>
    <h2>Answer the following question, reveal the answer and rate your performance</h2>
    <article data-controller="today" class="bg-gray-200 p-4 mb-4">
      <% if @question.tag_names.present? %>
        <div class="space-x-2 mb-8">
          <% @question.tag_names.each do |tag_name| %>
            <span class="tag">
              <%= tag_name %>
            </span>
          <% end %>
        </div>
      <% end %>
      <div class="text-3xl font-bold mb-8">
        <%= @question.description %>
      </div>
      <div>
        <%= link_to "Show answer", "#", data: { action: "today#showAnswer" } %>
      </div>
      <div class="hidden" data-target="today.answer">
        <div class="mb-8">
          <%= @question.expected_answer %>
        </div>
        <div class="flex flex-wrap justify-between">
          <% (0..5).each do |grade| %>
            <%= button_to question_answers_path(question_id: @question, grade: grade), method: :post, class: "grade grade-#{grade}", disabled: true, data: { action: "today#rateAnswer", target: "today.gradeLink" } do %>
              <span class="grade grade-<%= grade %>"></span>
            <% end %>
          <% end %>
        </div>
      </div>
    </article>
    <div class="text-sm">
      <%= link_to "How does the rating work?", legend_questions_path %>
    </div>
  <% else %>
    <h1>Good job!</h1>
    <h2 class="subtitle">You've answered all the questions for today. Come back tomorrow for more.</h2>
  <% end %>
</section>
