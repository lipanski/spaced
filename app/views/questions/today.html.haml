%section
  .container
    .columns
      .column.is-offset-2.is-8
        = render "shared/notifications"
        - if @question.present?
          %h2 Answer the following question, reveal the answer and rate your performance
          .card
            .card-content
              .content
                - if @question.tag_names
                  .tags
                    - @question.tag_names.each do |tag_name|
                      %span.tag.is-dark
                        = tag_name
                %p.title
                  = @question.description
                = link_to "Show answer", "#", data: { answer_for_question: "question_#{@question.id}" }
                %p.is-hidden{ id: "answer_question_#{@question.id}" }
                  = @question.expected_answer
            %footer.card-footer{ id: "disabled_links_question_#{@question.id}" }
              - (0..5).each do |grade|
                %a.card-footer-item{ disabled: true }
                  = image_pack_tag("icons/grade-#{grade}-outline.svg", alt: grade)
            %footer.card-footer.is-hidden{ id: "enabled_links_question_#{@question.id}" }
              - (0..5).each do |grade|
                = link_to image_pack_tag("icons/grade-#{grade}.svg", alt: grade), question_answers_path(question_id: @question, grade: grade), method: :post, class: "card-footer-item"
          %br
          .content.is-small
            = link_to "How does the rating work?", legend_questions_path
        - else
          %h1 Good job!
          %h2 You've answered all the questions for today. Come back tomorrow for more.
