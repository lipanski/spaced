.navbar.hero-head
  .container
    .navbar-brand
      .navbar-item
        %h1
          = link_to "SPACED", user_signed_in? ? user_root_path : root_path
      .navbar-burger{ data: { target: "navigation" } }
        %span
        %span
        %span
    .navbar-menu#navigation
      .navbar-start
      .navbar-end
        - if user_signed_in?
          = link_to "Today", user_root_path, class: "navbar-item"
          = link_to "My questions", questions_path, class: "navbar-item"
          = link_to "My profile", edit_user_registration_path, class: "navbar-item"
          = link_to "Logout", destroy_user_session_path, method: :delete, class: "navbar-item"
        - else
          = link_to "Register", new_user_registration_path, class: "navbar-item"
          = link_to "Login", new_user_session_path, class: "navbar-item"
