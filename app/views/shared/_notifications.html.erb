<% if alert %>
  <div class="rounded bg-red-200 text-white font-bold p-4 mb-4" data-controller="notification">
    <button data-action="notification#hide" class="float-right">✖</button>
    <%= alert %>
  </div>
<% end %>
<% if notice %>
  <div class="rounded bg-green-200 text-white font-bold p-4 mb-4" data-controller="notification">
    <button data-action="notification#hide" class="float-right">✖</button>
    <%= notice %>
  </div>
<% end %>
