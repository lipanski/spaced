- if alert
  .content.notification.is-danger.is-light{ data: { controller: "notification" } }
    %button.delete{ data: { action: "click->notification#hide" } }
    = alert
- if notice
  .content.notification.is-light{ data: { controller: "notification" } }
    %button.delete{ data: { action: "click->notification#hide" } }
    = notice
